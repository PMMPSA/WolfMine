{
    "namespace": "np_panels", 
    
    /*naturalpack_panel_for_marketplace*/
    "naturalpack_panel_for_marketplace": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm"
        ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "layer": 1,
        "controls": [
            {
                "background@play.label_background": {
                    "size": [
                        "100%",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "label_panel_layout": {
                                "type": "panel",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "size": [
                                    "100%-8px",
                                    "100%c + 8px"
                                ],
                                "controls": [
                                    {
                                        "label": {
                                            "type": "label",
                                            "color": "$dark_button_default_text_color",
                                            "size": [
                                                "100%",
                                                "default"
                                            ],
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "layer": 1,
                                            "shadow": false,
                                            "text": "$npt",
                                            "$npt_binding_type|default": "none",
                                            "$npt_binding_condition|default": "none",
                                            "bindings": [
                                                {
                                                    "binding_name": "$npt",
                                                    "binding_type": "$npt_binding_type",
                                                    "binding_condition": "$npt_binding_condition" 
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },

    /*header_background*/
    "header_background": {
        "type": "image",
        "size": [
            "100%",
            "20px"
        ],
        "offset": [
            0,
            "-2px"
        ],
        "anchor_from": "bottom_middle",
        "anchor_to": "bottom_middle",
        "texture": "textures/ui/Banners",
        "controls": [
            {
                "header_label": {
                    "type": "label",
                    "color": "$body_text_color",
                    "layer": 1,
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "text_alignment": "center",
                    "max_size": [
                        "95%",
                        10
                    ],
                    "text": "$text"
                }
            },
            {
                "focus_border@common.non_interact_focus_border_button": {
                    "size": [
                        "100%",
                        19 
                    ]
                }
            }
        ]
    },
    
    /*header*/
      "header": {
        "type": "panel",
        "size": [ "100%", "28px" ],
        "controls": [
          { "header@np_panels.header_background": {} }
        ]
      },

    /*naturalpack_panel*/
    "naturalpack_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm"
        ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "layer": 1,
        "controls": [
            {
                "background@play.label_background": {
                    "size": [
                        "100%",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "label_panel_layout": {
                                "type": "panel",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "size": [
                                    "100%-8px",
                                    "100%c + 8px"
                                ],
                                "controls": [
                                    {
                                        "label": {
                                            "type": "label",
                                            "color": "$dark_button_default_text_color",
                                            "size": [
                                                "100%",
                                                "default"
                                            ],
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "layer": 1,
                                            "shadow": false,
                                            "text": "$npt",
                                            "$npt_binding_type|default": "none",
                                            "$npt_binding_condition|default": "none",
                                            "bindings": [
                                                {
                                                    "binding_name": "$npt",
                                                    "binding_type": "$npt_binding_type",
                                                    "binding_condition": "$npt_binding_condition"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ] ///del 1-2
                }
            }
        ]
    }, /*   ///del 2
            ,{
                "focus_border@common.non_interact_focus_border_button": {
                    "size": [
                        "100%",
                        28
                    ]
                }
            }
        ]
    },  
    */
 
